<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp">


    <ImageView
        android:id="@+id/RV_buttonLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bline"
        android:rotation="270"
        android:layout_toRightOf="@+id/RV_buttonA"
        android:scaleY="3.5"
        android:layout_marginLeft="75dp"
        android:tintMode="multiply"
        android:tint="@color/botonapp"
/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bline"
        android:rotation="90"
        android:layout_below="@+id/RV_buttonB"
        android:layout_toRightOf="@+id/RV_buttonA"
        android:scaleY="3.5"
        android:layout_marginLeft="85dp"
        android:tintMode="multiply"
        android:tint="@color/botonapp"/>

    <ImageView
        android:id="@+id/RV_buttonA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bsquare"
        android:tintMode="multiply"
        android:rotation="270"
        android:tint="@color/botonapp"

        />

    <ImageView
        android:id="@+id/RV_buttonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bcorner"
        android:rotation="270"
        android:layout_below="@+id/RV_buttonB"
        android:tintMode="multiply"
        android:tint="@color/botonapp"/>
    <ImageView
        android:id="@+id/RV_buttonB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bcorner"
        android:rotation="90"
        android:tintMode="multiply"
        android:tint="@color/botonapp"


        android:layout_alignParentEnd="true"
        android:layout_marginLeft="75dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bsquare"
        android:rotation="90"

        android:layout_below="@+id/RV_buttonLine"
        android:layout_alignParentEnd="true"
        android:tintMode="multiply"
        android:tint="@color/botonapp"/>
    <ImageView
        android:id="@+id/RV_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/status"
        android:scaleX="-1"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/RV_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui va el titulo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/RV_lugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aqui va la direccion, osea el lugar donde paso, ya sabes"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        android:maxWidth="375dp"
        android:layout_below="@id/RV_titulo"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/RV_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aqui va la descripcion klasjdk askdjkas ajskd asjk ciiasd ioca"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:maxWidth="285dp"
        android:layout_below="@id/RV_titulo"
        />

</RelativeLayout>